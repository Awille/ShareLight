<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg">


    <LinearLayout
        android:layout_width="@dimen/dp_343"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_80"
        android:background="@drawable/login_background">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_28"
            android:layout_marginLeft="@dimen/dp_34"
            android:text="Sign in"
            android:textColor="@color/C_1D1C1E"
            android:textSize="@dimen/sp_34"/>
        
        <LinearLayout
            android:id="@+id/account_pannel"
            android:layout_width="@dimen/dp_276"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_34"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account"
                android:textColor="@color/C_898989"
                android:textSize="@dimen/sp_15"/>
            <EditText
                android:id="@+id/account"
                android:layout_width="@dimen/dp_276"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_11"
                android:background="@drawable/edit_text_background_normal"
                android:paddingLeft="@dimen/dp_15"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nick_pannel"
            android:layout_width="@dimen/dp_276"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_30"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nick Name"
                android:textColor="@color/C_898989"
                android:textSize="@dimen/sp_15"/>
            <EditText
                android:id="@+id/nick_name"
                android:layout_width="@dimen/dp_276"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_11"
                android:background="@drawable/edit_text_background_normal"
                android:paddingLeft="@dimen/dp_15"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/password_pannel"
            android:layout_width="@dimen/dp_276"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_30"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textColor="@color/C_898989"
                android:textSize="@dimen/sp_15"/>
            <EditText
                android:id="@+id/password"
                android:layout_width="@dimen/dp_276"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_11"
                android:background="@drawable/edit_text_background_normal"
                android:paddingLeft="@dimen/dp_15"
                android:layout_gravity="center"
                android:inputType="textPassword" />
        </LinearLayout>

        <Button
            android:layout_width="@dimen/dp_276"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_45"
            android:layout_marginBottom="@dimen/dp_35"
            android:layout_gravity="center"
            android:background="@drawable/sign_in_bt_list"
            android:textSize="@dimen/sp_15"
            android:text="SIGN IN"
            android:textColor="@color/FFFFFF"/>

    </LinearLayout>




</RelativeLayout>