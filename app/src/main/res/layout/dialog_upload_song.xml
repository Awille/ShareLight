<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/nomal_dialog_background"
    android:gravity="center_horizontal">



    <LinearLayout
        android:layout_marginTop="@dimen/dp_20"
        android:id="@+id/song_baic_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/song_name_pannel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal|center_vertical">
            <ImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@drawable/name"/>
            <EditText
                android:id="@+id/song_name_edit"
                android:layout_width="@dimen/dp_200"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:hint="歌曲名称"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/singer_pannel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_horizontal|center_vertical">
            <ImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@drawable/singer"/>
            <EditText
                android:id="@+id/singer_name_edit"
                android:layout_width="@dimen/dp_200"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:hint="歌手名称"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/album_pannel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:layout_marginTop="@dimen/dp_10">
            <ImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@drawable/album"/>
            <EditText
                android:id="@+id/album_name_edit"
                android:layout_width="@dimen/dp_200"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:hint="专辑名称"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/action_pannel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/song_baic_info"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_30">
        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_weight="1"
            android:text="取消"
            android:textColor="@color/FFFFFF"
            android:textSize="@dimen/sp_20"
            android:background="@drawable/button_background"/>

        <Button
            android:id="@+id/certain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:textColor="@color/FFFFFF"
            android:textSize="@dimen/sp_20"
            android:background="@drawable/button_background"
            android:text="确定"/>
    </LinearLayout>

</RelativeLayout>